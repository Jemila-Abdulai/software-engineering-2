FROM node:16
ARG IOT_HOST_NAME
ENV IOT_HOST_NAME=$IOT_HOST_NAME
ARG IOT_SHARED_ACCESS_KEY_NAME
ENV IOT_SHARED_ACCESS_KEY_NAME=$IOT_SHARED_ACCESS_KEY_NAME
ARG IOT_SHARED_ACCESS_KEY
ENV IOT_SHARED_ACCESS_KEY=$IOT_SHARED_ACCESS_KEY
ARG PORT
ENV PORT=$PORT
WORKDIR /app
COPY . .
EXPOSE 8080
CMD ["node", "src/server.js"]